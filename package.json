{
  "name": "hibp",
  "version": "15.2.1",
  "description": "An unofficial TypeScript SDK for the 'Have I been pwned?' service.",
  "keywords": [
    "haveibeenpwned",
    "hibp",
    "pwned",
    "security",
    "hack",
    "dump",
    "breach",
    "pastes",
    "passwords",
    "client"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "license": "MIT",
  "exports": {
    ".": {
      "browser": "./dist/browser/hibp.module.js",
      "default": "./dist/esm/hibp.js"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "main": "dist/esm/hibp.js",
  "module": "dist/esm/hibp.js",
  "files": [
    "dist",
    "API.md",
    "CHANGELOG.md",
    "MIGRATION.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "run-s --silent build:package-info build:lib build:browser build:docs",
    "build:package-info": "node --experimental-strip-types scripts/build-package-info.ts",
    "build:lib": "tsc --project tsconfig.tsc.json",
    "build:browser": "esbuild src/hibp.ts --minify --bundle --format=esm --platform=browser --tsconfig=tsconfig.esbuild.json --outfile=dist/browser/hibp.module.js",
    "build:docs": "jsdoc2md --no-cache --files src/*.ts --configure jsdoc2md.json > API.md && node scripts/fix-api-docs.js",
    "changeset": "changeset",
    "changeset:version": "changeset version && pnpm install",
    "changeset:publish": "changeset publish",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "prebuild": "pnpm run --silent clean",
    "prepublishOnly": "pnpm run build",
    "size": "bundlewatch --config .bundlewatch.config.json",
    "pretest": "pnpm run --silent build:package-info",
    "test": "vitest run",
    "pretest:coverage": "pnpm run --silent build:package-info",
    "test:coverage": "vitest run --coverage",
    "pretest:browser:open": "pnpm run --silent build:package-info && pnpm run --silent build:browser",
    "test:browser:open": "playwright test --ui",
    "pretest:browser:run": "pnpm run --silent build:package-info && pnpm run --silent build:browser",
    "test:browser:run": "playwright test",
    "pretest:watch": "pnpm run --silent build:package-info",
    "test:watch": "vitest watch"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wKovacs64/hibp.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/hibp/issues"
  },
  "homepage": "https://wkovacs64.github.io/hibp",
  "engines": {
    "node": ">= 20.19.0"
  },
  "packageManager": "pnpm@10.29.3",
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/preset-env": "7.29.0",
    "@babel/preset-typescript": "7.28.5",
    "@changesets/changelog-github": "0.5.2",
    "@changesets/cli": "2.29.8",
    "@playwright/test": "1.58.2",
    "@types/common-tags": "1.8.4",
    "@types/node": "24.10.13",
    "@vitest/coverage-v8": "4.0.18",
    "@wkovacs64/eslint-config": "7.12.0",
    "@wkovacs64/prettier-config": "4.2.4",
    "bundlewatch": "0.4.1",
    "common-tags": "1.8.2",
    "cross-env": "10.1.0",
    "esbuild": "0.27.3",
    "eslint": "9.39.2",
    "jsdoc-babel": "0.5.0",
    "jsdoc-to-markdown": "9.1.3",
    "msw": "2.12.10",
    "npm-run-all2": "8.0.4",
    "pathe": "2.0.3",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "serve": "14.2.5",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  }
}
