{
  "name": "hibp",
  "version": "4.4.1-dev.0",
  "description": "A Promise-based API for querying the 'Have I been pwned?' service.",
  "keywords": [
    "haveibeenpwned",
    "hibp",
    "pwned",
    "security",
    "hack",
    "dump",
    "breach",
    "pastes",
    "passwords"
  ],
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "contributors": [],
  "license": "MIT",
  "main": "lib/hibp.js",
  "module": "es/hibp.js",
  "browser": "dist/hibp.min.js",
  "runkitExampleFilename": "example/runkit.js",
  "scripts": {
    "clean": "rimraf dist lib es coverage nyc_output",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "cross-env NODE_ENV=production BABEL_ENV=commonjs babel src --out-dir lib --source-maps",
    "build:es": "cross-env NODE_ENV=production BABEL_ENV=es babel src --out-dir es --source-maps",
    "build:umd": "cross-env BABEL_ENV=commonjs webpack --display-optimization-bailout --progress --colors --hide-modules --config webpack/webpack.config.dev.babel.js",
    "build:umd:min": "cross-env NODE_ENV=production BABEL_ENV=commonjs webpack -p --display-optimization-bailout --progress --colors --hide-modules --config webpack/webpack.config.prod.babel.js",
    "docs": "jsdoc2md src/*.js > API.md",
    "lint": "eslint src test webpack",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wKovacs64/hibp.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/hibp/issues"
  },
  "homepage": "https://wkovacs64.github.io/hibp",
  "engines": {
    "node": ">= 4"
  },
  "dependencies": {
    "axios": "^0.16.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.5.2",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.1.0",
    "jsdoc-to-markdown": "^3.0.0",
    "mocha": "^3.4.2",
    "moxios": "^0.4.0",
    "nyc": "^11.0.2",
    "rimraf": "^2.6.1",
    "sinon": "^2.3.5",
    "webpack": "^3.0.0",
    "webpack-merge": "^4.1.0"
  }
}
